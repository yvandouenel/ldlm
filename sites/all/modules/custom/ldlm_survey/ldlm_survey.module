/**
 * Contrôle d'accès aux questionnaires.
 */
function ldlm_survey_survey_access($survey, $account = NULL) {
  global $user;

  if (empty($account)) {
    $account = $user;
  }

  if (!user_access('administer surveys', $account)) {
    return FALSE;
  }

  if (!$survey->getCampaignGroups()) {
    // Ne pas autoriser la modification ou la suppression d'un questionnaire
    // une fois que des campagnes y sont associées. La suppression pose
    // problème parce que les données soumises feraient référence à des
    // questions ou des groupes de questions désormais inexistants, la
    // modification parce que ces mêmes éléments feraient référence à des
    // questions qui ne seraient pas celles auxquelles les participants
    // auraient répondu.
    return TRUE;
  }

  return FALSE;
}

/**
 * Contrôle d'accès aux campagnes (édition, suppression).
 */
function ldlm_survey_campaign_access($campaign, $account = NULL) {
  global $user;

  if (empty($account)) {
    $account = $user;
  }

  if (!user_access('administer surveys', $account)) {
    return FALSE;
  }

  // On autorise la modification et la suppression d'une campagne uniquement
  // lorsqu'elle est encore à l'état « programmée ».
  if ($campaign->status == LDLM_SURVEY_STATUS_SCHEDULED) {
    return TRUE;
  }

  return FALSE;
}

/**
 * Contrôle d'accès au prologue du formulaire d'évaluation.
 */
function ldlm_survey_evaluation_prologue_access($campaign) {
  if ($campaign->status == LDLM_SURVEY_STATUS_OPEN) {
    return TRUE;
  }

  return FALSE;
}

/**
 * Contrôle d'accès au formulaire d'évaluation.
 */
function ldlm_survey_evaluation_access($participant) {
  if ($participant->answered) {
    return FALSE;
  }
  if ($participant->wrapper()->cid->status->value() == LDLM_SURVEY_STATUS_OPEN) {
    return TRUE;
  }

  return FALSE;
}

